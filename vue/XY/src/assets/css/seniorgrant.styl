.page-seniorgrant {
  padding: 10px 0 90px;
  .lay-info {
    margin-bottom: 10px;
  }
  .lay-junior {
    padding-top: 7.5px;
    .tag {
      padding-left: 15px;
      font-size: 14px;
      color #484848;
    }
    .item {
      position: relative;
      display: flex;
      align-items: center;
      padding: 12px 15px;
      bd-line(bottom, 1px, #eaeaea);
      &:last-child:after {
        display: none;
      }
      .address {
        width: 215px;
        margin-left: 10px;
        font-size: 14px;
        line-height: 20px;
        color #575757;
      }
      .distance {
        flex: 1;
        font-size: 12px;
        color #828282;
        text-align: right;
      }
      .num {
        font-size: 12px;
        color #ff3838;
      }
    }
  }
  .lay-action {
    position: fixed;
    z-index: 1;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px 30px;
    background-color: #f5f5f5;
  }
}
