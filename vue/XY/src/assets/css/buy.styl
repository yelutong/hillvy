.page-buy {
  padding-bottom: 55px;

  .mb10 {
    margin-bottom: 10px;
  }

  .lay-address {
    display: flex;
    align-items: center;
    padding: 10px 10px 10px 15px;
    transition: background-color 0.2s;

    &:active {
      background-color: #fafafa;
    }

    .i-map {
      width: 16.5px;
      height: 20.5px;
      background-image: url('../../assets/images/map.png');
    }

    .adress {
      flex: 1;
      display: flex;
      flex-direction: column;
      padding: 0 15px;

      .name-phone {
        margin-bottom: 2.5px;
      }

      .adres {
        font-size: 13px;
      }
    }

    .chose {
      font-size: 14px;
    }

    .i-aow {
      width: 10px;
      height: 10px;
      border: solid #989898;
      border-radius: 2px;
      border-width: 2px 2px 0 0;
      background: none;
      -webkit-transform: rotateZ(45deg);
      transform: rotateZ(45deg);
    }
  }

  .lay-goods {
    .item {
      display: flex;
      position: relative;
      padding: 12.5px 0;
      bd-line(
        top,
        1px,
        #eaeaea
      );

      &:first-child:before {
        display: none;
      }
    }

    .img-box {
      width: 80px;
      height: 80px;
      margin-right: 12.5px;
      overflow: hidden;

      .img {
        height: 100%;
      }
    }

    .info-box {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      .title {
        font-size: 14.5px;
        line-height: 1.3;
      }

      .weight {
        font-size: 12px;
        color: #878787;
      }
    }

    .price-num {
      display: flex;
      align-items: center;
      justify-content: space-between;

      .price {
        color: #FF4F00;
        font-family: 'Arial';
      }

      .change-num {
        width: auto;
        display: flex;
        text-align: center;
        line-height: 0;
        border-radius: 3.5px;
        border: 1px solid rgba(184, 184, 184, 0.5);
      }

      .rdu, .add, .num {
        line-height: 22px;
      }

      .rdu, .add {
        width: 22.5px;
        height: 22px;
        font-size: 13px;
        color: #6f6f6f;
      }

      .num {
        padding: 0 9px;
        border: solid rgba(184, 184, 184, 0.5);
        border-width: 0 1px;
      }
    }
  }

  .lay-tips {
    .txa {
      height: 75px;
    }
  }
}
