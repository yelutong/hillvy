.page-express {
  .lay-info {
    position: relative;
    padding: 10px 12.5px;
    margin-bottom: 10px;

    &:after {
      content: '';
      position: absolute;
      left: 0;
      right: 0;
      bottom: -10px;
      height: 10px;
      background-color: #f5f5f5;
    }

    .info {
      font-size: 15px;
      line-height: 1.7;
      color: #444;
    }
  }

  .lay-detail {
    .title {
      position: relative;
      padding: 0 12.5px;
      line-height: 35px;
      color: #444;
      font-size: 15px;
      bd-line(bottom, 1px, #eaeaea);
    }

    .list {
      padding: 12.5px 10px 15px 40px;
    }

    .item {
      position: relative;
      padding: 10px 0;

      .context, .date {
        color: #444;
        line-height: 1.5;
      }

      .context {
        margin-bottom: 5px;
        font-size: 13px;
      }

      .date {
        font-size: 12px;
      }

      .line {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 1px;
        background-color: #f5f5f5;
        transform: scaleY(0.5);
      }

      &:before, &:after {
        content: '';
        position: absolute;
      }

      &:before {
        top: 15px;
        left: -22px;
        z-index: 2;
        width: 9px;
        height: 9px;
        border-radius: 50%;
        background-color: #efefef;
      }

      &:after {
        top: 0;
        left: -19px;
        width: 1px;
        height: 100%;
        background-color: #efefef;
        transform: scaleX(0.5);
      }

      &:first-child {
        padding-top: 0;

        .context, .date {
          color: #184074;
        }

        &:before {
          top: 3px;
          left: -24.5px;
          width: 12px;
          height: 12px;
          background-color: #184074;
        }

        &:after {
          top: 6px;
        }
      }

      &:last-child {
        padding-bottom: 0;

        .line {
          display: none;
        }

        &:after {
          height: 20px;
        }
      }
    }
  }
}
