// 通用型样式
* {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    -webkit-user-select: none;
    user-select: none;
    box-sizing: content-box;
  -moz-box-sizing: content-box;
  -webkit-box-sizing: content-box;
}
::-webkit-scrollbar {
  display: none;
}
html, body {
  height: 100%;
}

body {
    font-size: 15px !important;
    line-height: 1.4;
    font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
    color: #000;
    background-color: #f5f5f5;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: normal;
}

i {
    font-style: normal;
}

li {
    list-style: none;
}

button, input, textarea, select {
    font-size: 15px;
    font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
    color: #2f2f2f;
    outline: none;
    -webkit-user-select: auto;
    user-select: auto;
}

textarea {
    display: block;
    width: 100%;
    padding: 5px;
    border: 1px solid #eaeaea;
}

a {
    color: #000;
    font-style: normal;
    text-decoration: none;
    outline: none;
    -webkit-touch-callout: none;
    -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
}

img {
    display: block;
    width: 100%;
}

video {
    display: block;
    width: 100%;
    min-height: 210px;
}

hr {
    border: none;
}

#app {
    height: 100%;
}

.wrapper {
    min-height: 100%;
}

.white {
    background-color: #fff;
}

.elips {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.i-cks {
    width: 19px;
    height: 18.5px;
    background-image: url('assets/images/cks.png');

    &.checked {
        background-image: url('assets/images/cks-on.png');
    }
}

.i-date {
    width: 10px;
    height: 10px;
    margin-right: 2.5px;
    vertical-align: -1px;
    background-image: url('assets/images/date.png');
}

.ipt {
    height: 28px;
    line-height: 28px;
    border: none;
    background: none;
}

.brk-wod {
    word-break: break-all;
}

.fix-btom {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 10;
    width: 100%;
    display: flex;
    align-items: center;
}

.ico {
    display: inline-block;
    font-size: 0;
    line-height: 0;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
}

.no-tap {
    -webkit-touch-callout: none;
    -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
}

.overflow {
    overflow: hidden;
}

.mid-img {
    position: relative;
    overflow: hidden;

    .img {
        position: absolute;
        left: 0;
        top: 50%;
        width: 100%;
        height: auto;
        transform: translateY(-50%);
    }
}

.btn-submit {
    width: 100%;
    height: 50px;
    padding: 0;
    margin: 0;
    line-height: 50px;
    font-size: 15px;
    color: #fff;
    text-align: center;
    border: none;
    border-radius: 25px;
    background: #FF4F00;
    transition: background 0.2s;

    &.nordu {
        border-radius: 0;
    }

    &:active {
        background: #0e3262;
    }
}

.btn-act {
    display: inline-block;
    width: 77px;
    height: 30px;
    margin: 0 0 0 7.5px;
    font-size: 12px;
    color: #FF4F00;
    line-height: 30px;
    border-radius: 5px;
    text-align: center;
    border: 1px solid #FF4F00;
    background-color: #fff;
    transition: background-color 0.2s;
    -webkit-touch-callout: none;
    -webkit-tap-highlight-color: rgba(255, 0, 0, 0);

    &:active {
        background-color: #f5f5f5;
    }
}

.i-arow {
  width: 10px;
  height: 10px;
  margin-left: 4px;
  border: solid #d9d9d9;
  border-radius: 2px;
  border-width: 2px 2px 0 0;
  background: none;
  -webkit-transform: rotateZ(45deg);
  transform: rotateZ(45deg);

  &.i-black {
    border-color: #4a4a4a;
  }

  &.i-blue {
    border-color: #FF4F00;
  }
}

/* 插件样式改写 */
.mint-msgbox {
    .mint-msgbox-content {
        .mint-msgbox-message {
            font-size: 14px;
            line-height: 1.5;
        }
    }
}

.mint-toast {
    .mint-toast-icon {
        margin: 0 auto;
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
    }

    .loading {
        width: 30px;
        height: 30px;
        background-image: url('assets/images/loading.gif');
    }

    .ok {
        width: 50px;
        height: 42.5px;
        background-image: url('assets/images/ok.png');
    }
}

.mint-swipe-items-wrap{
  height: auto;
}