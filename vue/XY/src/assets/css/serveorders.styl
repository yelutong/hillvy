.page-serveorders {
  padding-top: 55px;
  .tab-nav {
    position: fixed;
    left: 0;
    right: 0;
    top: 10px;
    z-index: 5;
    display: flex;
    align-items: center;
    height: 45px;
    bd-line(bottom, 1px, #eaeaea);
    .item {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 45px;
      .nav {
        position: relative;
        margin-top: -2px;
        font-size: 16px;
        color: #484848;
        &.active {
          &:after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -2px;
            width: 100%;
            height: 2px;
            background-color: #FF4F00;
          }
        }
      }
    }
  }
  .order-list {
    .item {
      display: flex;
      align-items: center;
      padding: 7.5px 15px;
      margin-bottom: 10px;
      background-color: #fff;
      transition: background-color 0.2s;
      &:active {
        background-color: #f5f5f5;
      }
      .info {
        flex: 1;
        .im {
          display: flex;
          align-items: center;
          line-height: 1.5;
        }
        .tag {
          width: 5em;
          font-size: 14px;
          color: #828282;
        }
        .con {
          flex: 1;
          max-width: 240px;
          font-size: 14px;
          color: #484848;
        }
      }
    }
  }
}
