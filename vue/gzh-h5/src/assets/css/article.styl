.page-article,
.page-about {
  padding: 11.5px 12.5px;
  .title {
    display: flex;
    justify-content: center;
    font-size: 16px;
  }
  .date {
    margin: 5px 0 12px;
    font-size: 13px;
    color: #828282;
    text-align: right;
  }
  .img {
    height: auto;
    margin-bottom: 15px;
    border-radius: 2.5px;
  }
  .text {
    margin-bottom: 12.5px;
    font-size: 14px;
    color: #626262;
    text-indent: 2em;
    line-height: 1.7;
  }
}
