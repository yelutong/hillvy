.page-servedetail {
  padding: 10px 0 90px;
  .lay-action {
    display: flex;
    justify-content: space-around;
    position: fixed;
    z-index: 1;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px 0;
    background-color: #f5f5f5;
    .btn-submit {
      margin: 0 15px;
      &.grey {
        background: #c1c1c1;
        &:active {
          background: #b1b1b1;
        }
      }
    }
  }
}
