.page-pay {
  padding-bottom: 55px;

  .mb10 {
    margin-bottom: 10px;
  }

  .pay-item {
    display: flex;
    position: relative;
    padding: 10px 12.5px;
    background-color: #fff;
    bd-line(bottom, 1px, #eaeaea);

    &.nobd:after {
      display: none;
    }

    .tit, .con {
      font-size: 14px;
      color: #555;
    }

    .tit {
      width: 62.5px;
    }

    .con {
      flex: 1;
    }

    .rt {
      text-align: right;
    }

    .price {
      color: #FF4F00;
      font-family: 'Arial';
    }
  }

  .lay-goods {
    padding: 0 15px;

    .item {
      display: flex;
      position: relative;
      padding: 12.5px 0;
      bd-line(top, 1px, #eaeaea);

      &:first-child:before {
        display: none;
      }
    }

    .img-box {
      width: 80px;
      height: 80px;
      margin-right: 12.5px;
      overflow: hidden;

      .img {
        height: 100%;
      }
    }

    .info-box {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;

      .title {
        font-size: 14.5px;
        line-height: 1.3;
        color: #555;
      }

      .weight {
        font-size: 12px;
        color: #555;
      }
    }

    .price-num {
      display: flex;
      justify-content: space-between;

      .price {
        color: #FF4F00;
        font-family: 'Arial';
      }

      .num {
        font-size: 13px;
        color: #555;
      }
    }
  }
}