.page-ordercenter {
  .lay-goods {
    .item {
      display: flex;
      padding: 10px;
      margin-bottom: 10px;
      background-color: #fff;
    }

    .img-box {
      width: 80px;
      height: 80px;
      margin-right: 10px;
      overflow: hidden;

      .img {
        height: 100%;
      }
    }

    .weight {
      font-size: 12px;
      color: #878787;
    }

    .detail {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 90px;

      .title {
        line-height: 1.3;

        &.hover {
          color: #828282;
        }
      }
    }

    .action-date {
      display: flex;
      align-items: center;

      .date {
        font-size: 12px;
      }

      .action {
        flex: 1;
        text-align: right;
      }
    }
  }
}