.page-collects {
  padding-bottom: 50px;

  .lay-collects {
    .item {
      position: relative;
      display: flex;
      margin-bottom: 8.5px;
      background-color: #fff;
      transition: background-color 0.2s;

      &:active {
        background-color: #f5f5f5;
      }
    }

    .chose {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 35px;
      padding-left: 7.5px;
    }

    .detail {
      flex: 1;
      display: flex;
      padding: 12px 10px;
    }

    .img-box {
      width: 90px;
      height: 90px;
      margin-right: 10px;
      overflow: hidden;

      .img {
        height: 100%;
      }
    }

    .info-box {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 5px 0;

      .title {
        line-height: 1.3;
      }

      .price {
        font-size: 16px;
        color: #FF4F00;
      }
    }
  }

  .lay-action {
    .btn-submit {
      flex: 1;
    }

    .done {
      border-left: 1px solid rgba(255, 255, 255, 0.5);
    }
  }
}